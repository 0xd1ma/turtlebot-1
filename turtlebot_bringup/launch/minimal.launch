<launch>
  <arg name="base" value="$(optenv TURTLEBOT_BASE kobuki)"/>  <!-- create, rhoomba -->
  <arg name="simulation" value="false"/>
  <param name="/use_sim_time" value="$(arg simulation)"/>
  
  <include file="$(find turtlebot_bringup)/launch/components/_zeroconf.launch"/>
  <include file="$(find turtlebot_bringup)/launch/components/_robot.launch">
    <arg name="base" value="$(arg base)" />
  </include>
  <include file="$(find turtlebot_bringup)/launch/$(arg base)/_mobile_base.launch">
    <arg name="base" value="$(arg base)" />
  </include>
  <include file="$(find turtlebot_bringup)/launch/components/_netbook.launch"/>
  <include file="$(find turtlebot_bringup)/launch/components/_app_manager.launch">
    <arg name="base" value="$(arg base)" />
  </include>

</launch>
