    local-name: turtlebot_arm

# turtlebot apps 
- git:
    uri: https://github.com/turtlebot/turtlebot_apps.git
    local-name: turtlebot_apps
    version: master

# rqt and dashboard - don't have groovy debs yet.
- git: 
    uri: https://github.com/ros-visualization/rqt.git
    local-name: rqt
    version: master

- git:
    uri: https://github.com/ros-visualization/qt_gui_core.git
